@model Authorize.Models.LoginViewModel
<h1>Login</h1>

<a asp-controller="Home" asp-action="Index">[ToHome]</a>

<h3>Providers</h3>

<form asp-controller="Admin" asp-action="ExternalSigIn" asp-route-returnUrl="@Model.ReturnUrl">
    @foreach (var provider in Model.Providers)
    {
        <button type="submit"
                name="provider"
                value="@provider.Name">
            @provider.DisplayName
        </button>
    }
</form>


<form asp-controller="Admin" asp-action="Login" method="post">
    <div asp-validation-summary="All"></div>
    <input hidden asp-for="ReturnUrl" />
    <div>
        <label>UserName</label>
        <input asp-for="UserName" />
        <span asp-validation-for="UserName"></span>
    </div>
    <div>
        <label>Password</label>
        <input asp-for="Password" />
        <span asp-validation-for="Password"></span>
    </div>

    <p>
        <button type="submit">Log in</button>
    </p>
</form>